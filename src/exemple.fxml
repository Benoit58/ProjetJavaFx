<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ImageController">
   <left>
      <ImageView fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" fx:id="imageToModify">
         <image>
            <Image url="image/riom.jpg" />
         </image>
      </ImageView>
   </left>
   <top>
      <Label text="JAVAFX Window" BorderPane.alignment="CENTER" />
   </top>
   <padding>
      <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
   </padding>
   <right>
      <Button  text="Change Photo" BorderPane.alignment="CENTER" onAction="#changePhoto" fx:id="buttonChange"/>
   </right>
</BorderPane>
