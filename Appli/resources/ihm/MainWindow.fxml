<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainWindowController">
   <left>
      <VBox alignment="CENTER" prefWidth="210.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="Select a sensor" />
            <ListView fx:id="sensorListView" VBox.vgrow="ALWAYS">
               <cellFactory>
                   <SensorCellFactory/>
               </cellFactory>
            </ListView>
            <FlowPane alignment="CENTER">
               <children>
                   <Button mnemonicParsing="false" onAction="#addSensor" text="Add sensor" />
                   <ComboBox fx:id="displayChoice" promptText="Choice a Display">
                       <cellFactory>
                           <DisplayChoiceFactory/>
                       </cellFactory>
                   </ComboBox>
                   <Button fx:id="button_valid" mnemonicParsing="false" onAction="#display" text="Display" />
               </children>
            </FlowPane>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <ScrollPane BorderPane.alignment="TOP_LEFT">
         <content>
            <TilePane />
         </content>
      </ScrollPane>
   </center>
   <top>
       <Label text="SensorsManager" textFill="#c72424" BorderPane.alignment="CENTER">
           <font>
               <Font size="24.0" />
           </font>
       </Label>
   </top>
